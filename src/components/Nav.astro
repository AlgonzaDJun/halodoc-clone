---
import {
  Astronav,
  MenuItems,
  MenuIcon,
  Dropdown,
  DropdownItems,
  DropdownSubmenu,
} from "astro-navbar";
---

<header
  class="lg:flex flex justify-between lg:items-center lg:justify-between p-5 gap-5 mx-auto border-b"
>
  <Astronav closeOnClick>
    <div class="lg:flex items-center gap-2">
      <div class="flex w-full lg:w-auto items-center">
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
        <div
          class="text-primary text-4xl font-extralight lowercase flex items-center gap-1"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-8 h-8"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M9 12.75 11.25 15 15 9.75m-3-7.036A11.959 11.959 0 0 1 3.598 6 11.99 11.99 0 0 0 3 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285Z"
            ></path>
          </svg>

          Halodec
        </div>
      </div>
      <MenuItems class="hidden lg:flex">
        <ul class="flex flex-col gap-5 lg:flex-row lg:gap-5">
          <li>
            <a href="#">Beranda</a>
          </li>
          <li>
            <a href="#">Article</a>
          </li>
          <li>
            <a href="#">Aplikasi</a>
          </li>
          <li>
            <a href="#">Riwayat</a>
          </li>
        </ul>
      </MenuItems>
    </div>
    <button
      class="p-1 px-2 h-9 rounded bg-primary text-white hover:bg-red-700 text-sm"
      >Login</button
    >
  </Astronav>
</header>
