---
import { Image } from "astro:assets";

const { src, title } = Astro.props;
---

<div
  class="min-w-28 min-h-28 md:w-[180px] md:h-[120px] p-1 py-2 text-center space-y-2 border rounded bg-white hover:border-black cursor-pointer"
>
  <Image src={src} width="70" height="70" class="mx-auto" alt="doctor" />
  <p class="text-xs font-medium">{title}</p>
</div>
